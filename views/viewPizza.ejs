<div class="container" id='viewPizza'>

  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Details</h3></div>
    <div class="panel-body">
      <table id="orders" class="table">
        <thead>
        <tr>
          <th></th>

          <th width="180">Created</th>
          <th width="15%">Image</th>
          <th width="5%">Name</th>
          <th width="180">Description</th>
          <th width="10%">Price</th>
          <th width="100">Type</th>
          <th width="180">Actions</th>
        </tr>
        </thead>
        <tbody>

        <% pizzadetail.forEach(function(pizza, i) { %>
        <tr>
          <td><span class="label label-<% if(pizza.processed) { %>success<% } else { %>default<% } %>"><%= i+1 %></span></td>
          <td><%= pizza.createdDate %></td>
          <td>
            <strong><%= pizza.image %></strong><br/>
            <%= pizza.name %><br/>
            <%= pizza.description %>
          </td>
          <td><%= pizza.price %></td>
          <td><%pizza.type%></td>

<td>
            <a href=''><i class="far fa-edit"></i></a>
        <a href='/deletenote/<%= pizza._id%>'><i class="far fa-trash-alt"></i></a>
          </td>
        </tr>
        <% }) %>

        </tbody>
      </table>
    </div>
  </div>

